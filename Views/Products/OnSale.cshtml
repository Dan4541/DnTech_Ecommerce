@model List<Product>
@{
    ViewData["Title"] = "Productos en Oferta";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- Hero section para ofertas -->
    <div class="hero-section mb-5" style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(220, 53, 69, 0.2) 100%);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3 text-danger">¡Ofertas Especiales!</h1>
                    <p class="lead mb-4">Aprovecha nuestros mejores descuentos en productos de tecnología. Precios reducidos por tiempo limitado.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-danger btn-lg">
                            <i class="bi bi-tag-fill me-2"></i>Ver todas las ofertas
                        </a>
                        <a asp-controller="Products" asp-action="Featured" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-star me-2"></i>Ver destacados
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="bi bi-tag-fill display-1 text-danger"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Contador de ofertas (opcional) -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card border-0 bg-light text-center py-3">
                <h2 class="fw-bold text-danger mb-0">@Model.Count</h2>
                <p class="text-muted mb-0">Productos en oferta</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light text-center py-3">
                <h2 class="fw-bold text-success mb-0">
                    @{
                        var maxDiscount = Model.Any() ? Model.Max(p => p.OldPrice.HasValue ? ((p.OldPrice.Value - p.Price) / p.OldPrice.Value * 100) : 0) : 0;
                    }
                    @maxDiscount.ToString("0")%
                </h2>
                <p class="text-muted mb-0">Descuento máximo</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-light text-center py-3">
                <h2 class="fw-bold text-primary mb-0">$@(Model.Sum(p => p.Price).ToString("N2"))</h2>
                <p class="text-muted mb-0">Total ahorro estimado</p>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-tag display-1 text-muted mb-3"></i>
            <h3>No hay ofertas disponibles</h3>
            <p class="text-muted mb-4">Vuelve pronto para ver nuestras promociones.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Ver todos los productos</a>
        </div>
    }
    else
    {
        <!-- Productos en oferta -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in Model.OrderByDescending(p => ((p.OldPrice ?? p.Price) - p.Price) / (p.OldPrice ?? p.Price)))
            {
                var discountPercentage = product.OldPrice.HasValue ?
                ((product.OldPrice.Value - product.Price) / product.OldPrice.Value * 100) : 0;

                <div class="col">
                    <div class="card product-card h-100 border-0 shadow-sm border-danger border-2">
                        <div class="position-relative">
                            <!-- Badge de descuento grande -->
                            <span class="badge-discount-lg">
                                -@discountPercentage.ToString("0")%
                            </span>

                            <a href="@Url.Action("Details", new { id = product.Id })" class="text-decoration-none">
                                <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">
                                <a href="@Url.Action("Details", new { id = product.Id })" class="text-dark text-decoration-none">
                                    @product.Name
                                </a>
                            </h5>

                            <div class="mb-3">
                                <span class="text-danger small">
                                    <i class="bi bi-clock-history me-1"></i>
                                    Oferta por tiempo limitado
                                </span>
                            </div>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <span class="price-tag">$@product.Price.ToString("N2")</span>
                                        @if (product.OldPrice.HasValue)
                                        {
                                            <span class="text-decoration-line-through text-muted d-block">$@product.OldPrice?.ToString("N2")</span>
                                            <small class="text-success">
                                                <i class="bi bi-coin me-1"></i>
                                                Ahorras: $@((product.OldPrice.Value - product.Price).ToString("N2"))
                                            </small>
                                        }
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-outline-danger">
                                        <i class="bi bi-eye me-2"></i>Ver oferta
                                    </a>
                                    <button class="btn btn-danger add-to-cart" data-product-id="@product.Id">
                                        <i class="bi bi-cart-plus me-2"></i>Agregar al carrito
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <div class="d-flex justify-content-between align-items-center small text-muted">
                                <span><i class="bi bi-grid me-1"></i>@product.Category?.Name</span>
                                <span>
                                    @if (product.StockQuantity > 0)
                                    {
                                        <span class="text-success"><i class="bi bi-check-circle me-1"></i>@product.StockQuantity disponibles</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><i class="bi bi-x-circle me-1"></i>Agotado</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Advertencia de tiempo limitado -->
        <div class="alert alert-warning mt-5" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                <div>
                    <h5 class="alert-heading mb-2">¡Atención!</h5>
                    <p class="mb-0">Estas ofertas son por tiempo limitado y están sujetas a disponibilidad de stock. Los precios pueden cambiar sin previo aviso.</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Agregar estos estilos a tu site.css -->
<style>
    .badge-discount-lg {
        position: absolute;
        top: 15px;
        left: 15px;
        background: linear-gradient(45deg, #dc3545, #ff6b6b);
        color: white;
        padding: 8px 15px;
        border-radius: 30px;
        font-size: 1.2rem;
        font-weight: 700;
        z-index: 10;
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
    }

    .border-danger {
        border-color: #dc3545 !important;
    }
</style>

@section Scripts {
    <script>
        // Agregar al carrito
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function() {
                const productId = this.getAttribute('data-product-id');

                fetch('@Url.Action("AddToCart", "Cart")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ productId: productId, quantity: 1 })
                })
                .then(response => {
                    if (response.ok) {
                        alert('¡Oferta agregada al carrito!');
                        updateCartCount();
                    } else {
                        alert('Error al agregar el producto');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error de conexión');
                });
            });
        });

        function updateCartCount() {
            // Implementar después cuando tengamos el carrito
            console.log('Actualizar contador del carrito');
        }
    </script>
}