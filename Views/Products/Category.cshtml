@model List<Product>
@{
    var category = ViewData["Category"] as DnTech_Ecommerce.Models.Category;
    ViewData["Title"] = category?.Name ?? "Categoría";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Productos</a></li>
            <li class="breadcrumb-item active" aria-current="page">@category?.Name</li>
        </ol>
    </nav>

    <!-- Header de categoría -->
    <div class="row mb-5">
        <div class="col-lg-8">
            <h1 class="fw-bold display-5 mb-3">@category?.Name</h1>
            @if (!string.IsNullOrEmpty(category?.Description))
            {
                <p class="lead text-muted">@category.Description</p>
            }
            <p class="text-muted"><i class="bi bi-grid me-1"></i> @Model.Count productos en esta categoría</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <div class="d-flex gap-2 justify-content-lg-end">
                <a href="@Url.Action("Featured")" class="btn btn-outline-primary">Destacados</a>
                <a href="@Url.Action("OnSale")" class="btn btn-outline-danger">Ofertas</a>
                <a href="@Url.Action("New")" class="btn btn-outline-success">Nuevos</a>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-folder-x display-1 text-muted mb-3"></i>
            <h3>No hay productos en esta categoría</h3>
            <p class="text-muted mb-4">Pronto agregaremos más productos.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Ver todos los productos</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card product-card h-100 border-0 shadow-sm">
                        @if (product.IsOnSale)
                        {
                            <span class="badge-discount">
                                -@(((product.OldPrice - product.Price) / product.OldPrice * 100)?.ToString("0") ?? "20")%
                            </span>
                        }
                        @if (product.IsNew)
                        {
                            <span class="badge-new">Nuevo</span>
                        }

                        <a href="@Url.Action("Details", new { id = product.Id })" class="text-decoration-none">
                            <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">
                                <a href="@Url.Action("Details", new { id = product.Id })" class="text-dark text-decoration-none">
                                    @product.Name
                                </a>
                            </h5>
                            <p class="card-text text-muted small">@(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)</p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price-tag">$@product.Price.ToString("N2")</span>
                                    @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                    {
                                        <span class="text-decoration-line-through text-muted small">$@product.OldPrice?.ToString("N2")</span>
                                    }
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-outline-primary">
                                        <i class="bi bi-eye me-2"></i>Ver detalles
                                    </a>
                                    <button class="btn btn-primary add-to-cart" data-product-id="@product.Id">
                                        <i class="bi bi-cart-plus me-2"></i>Agregar al carrito
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 small text-muted">
                            <div class="d-flex justify-content-between">
                                <span>SKU: @product.Sku</span>
                                <span>
                                    @if (product.StockQuantity > 0)
                                    {
                                        <span class="text-success"><i class="bi bi-check-circle me-1"></i>Disponible</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><i class="bi bi-x-circle me-1"></i>Agotado</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sugerencias de otras categorías -->
        <div class="mt-5 pt-5 border-top">
            <h4 class="fw-bold mb-4">Explora otras categorías</h4>
            <div class="row g-3">
                <div class="col-md-3 col-6">
                    <a asp-controller="Products" asp-action="Category" asp-route-slug="smartphones" class="text-decoration-none">
                        <div class="card category-card h-100 border-0 text-center py-4">
                            <i class="bi bi-phone display-6 text-primary mb-3"></i>
                            <h6 class="fw-bold">Smartphones</h6>
                        </div>
                    </a>
                </div>
                <div class="col-md-3 col-6">
                    <a asp-controller="Products" asp-action="Category" asp-route-slug="laptops" class="text-decoration-none">
                        <div class="card category-card h-100 border-0 text-center py-4">
                            <i class="bi bi-laptop display-6 text-primary mb-3"></i>
                            <h6 class="fw-bold">Laptops</h6>
                        </div>
                    </a>
                </div>
                <div class="col-md-3 col-6">
                    <a asp-controller="Products" asp-action="Category" asp-route-slug="audio" class="text-decoration-none">
                        <div class="card category-card h-100 border-0 text-center py-4">
                            <i class="bi bi-headphones display-6 text-primary mb-3"></i>
                            <h6 class="fw-bold">Audio</h6>
                        </div>
                    </a>
                </div>
                <div class="col-md-3 col-6">
                    <a asp-controller="Products" asp-action="Category" asp-route-slug="wearables" class="text-decoration-none">
                        <div class="card category-card h-100 border-0 text-center py-4">
                            <i class="bi bi-smartwatch display-6 text-primary mb-3"></i>
                            <h6 class="fw-bold">Wearables</h6>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Agregar al carrito
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function() {
                const productId = this.getAttribute('data-product-id');

                fetch('@Url.Action("AddToCart", "Cart")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ productId: productId, quantity: 1 })
                })
                .then(response => {
                    if (response.ok) {
                        alert('Producto agregado al carrito');
                        updateCartCount();
                    } else {
                        alert('Error al agregar el producto');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error de conexión');
                });
            });
        });

        function updateCartCount() {
            // Implementar después cuando tengamos el carrito
            console.log('Actualizar contador del carrito');
        }
    </script>
}