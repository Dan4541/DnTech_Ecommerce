@model List<Product>
@{
    ViewData["Title"] = "Productos Destacados";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- Hero section para destacados -->
    <div class="hero-section mb-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">Productos Destacados</h1>
                    <p class="lead mb-4">Descubre nuestra selección de productos más populares y mejor valorados por nuestros clientes.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-grid me-2"></i>Ver todos los productos
                        </a>
                        <a asp-controller="Products" asp-action="OnSale" class="btn btn-danger btn-lg">
                            <i class="bi bi-tag me-2"></i>Ver ofertas
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="bi bi-star-fill display-1 text-warning"></i>
                </div>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-star display-1 text-muted mb-3"></i>
            <h3>No hay productos destacados</h3>
            <p class="text-muted mb-4">Pronto agregaremos productos destacados.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Ver todos los productos</a>
        </div>
    }
    else
    {
        <!-- Filtros rápidos -->
        <div class="d-flex flex-wrap gap-2 mb-4 justify-content-center">
            <a asp-controller="Products" asp-action="Category" asp-route-slug="smartphones" class="btn btn-outline-primary btn-sm">Smartphones</a>
            <a asp-controller="Products" asp-action="Category" asp-route-slug="laptops" class="btn btn-outline-primary btn-sm">Laptops</a>
            <a asp-controller="Products" asp-action="Category" asp-route-slug="audio" class="btn btn-outline-primary btn-sm">Audio</a>
            <a asp-controller="Products" asp-action="Category" asp-route-slug="wearables" class="btn btn-outline-primary btn-sm">Wearables</a>
            <a asp-controller="Products" asp-action="Category" asp-route-slug="tablets" class="btn btn-outline-primary btn-sm">Tablets</a>
            <a asp-controller="Products" asp-action="Category" asp-route-slug="accesorios" class="btn btn-outline-primary btn-sm">Accesorios</a>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card product-card h-100 border-0 shadow-lg">
                        <div class="position-relative">
                            <!-- Badge destacado -->
                            <span class="badge-featured">
                                <i class="bi bi-star-fill me-1"></i>Destacado
                            </span>

                            @if (product.IsOnSale)
                            {
                                <span class="badge-discount">
                                    -@(((product.OldPrice - product.Price) / product.OldPrice * 100)?.ToString("0") ?? "20")%
                                </span>
                            }

                            <a href="@Url.Action("Details", new { id = product.Id })" class="text-decoration-none">
                                <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name" style="height: 220px; object-fit: cover;">
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= product.Rating ? "bi-star-fill" : "bi-star") text-warning"></i>
                                }
                                <span class="text-muted small ms-2">(@product.ReviewCount)</span>
                            </div>

                            <h5 class="card-title fw-bold">
                                <a href="@Url.Action("Details", new { id = product.Id })" class="text-dark text-decoration-none">
                                    @product.Name
                                </a>
                            </h5>

                            <p class="card-text text-muted small flex-grow-1">
                                @(product.Description.Length > 90 ? product.Description.Substring(0, 90) + "..." : product.Description)
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price-tag">$@product.Price.ToString("N2")</span>
                                    @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                    {
                                        <span class="text-decoration-line-through text-muted">$@product.OldPrice?.ToString("N2")</span>
                                    }
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-outline-primary">
                                        <i class="bi bi-eye me-2"></i>Ver detalles
                                    </a>
                                    <button class="btn btn-primary add-to-cart" data-product-id="@product.Id">
                                        <i class="bi bi-cart-plus me-2"></i>Agregar al carrito
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <div class="d-flex justify-content-between align-items-center small">
                                <span class="text-muted">
                                    <i class="bi bi-grid me-1"></i>@product.Category?.Name
                                </span>
                                <span class="@(product.StockQuantity > 0 ? "text-success" : "text-danger")">
                                    <i class="bi @(product.StockQuantity > 0 ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                                    @(product.StockQuantity > 0 ? "En stock" : "Agotado")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Llamada a la acción -->
        <div class="text-center mt-5 pt-5">
            <div class="card border-0 bg-light py-5">
                <h3 class="fw-bold mb-3">¿No encuentras lo que buscas?</h3>
                <p class="text-muted mb-4">Explora todas nuestras categorías y encuentra el producto perfecto para ti.</p>
                <div class="d-flex flex-wrap gap-3 justify-content-center">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-grid me-2"></i>Ver catálogo completo
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-house me-2"></i>Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Agregar estos estilos a tu site.css -->
<style>
    .badge-featured {
        position: absolute;
        top: 15px;
        right: 15px;
        background: linear-gradient(45deg, #ffd700, #ffaa00);
        color: #000;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        z-index: 10;
        box-shadow: 0 3px 10px rgba(255, 170, 0, 0.3);
    }
</style>

@section Scripts {
    <script>
        // Agregar al carrito
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function() {
                const productId = this.getAttribute('data-product-id');

                fetch('@Url.Action("AddToCart", "Cart")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ productId: productId, quantity: 1 })
                })
                .then(response => {
                    if (response.ok) {
                        alert('Producto agregado al carrito');
                        updateCartCount();
                    } else {
                        alert('Error al agregar el producto');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error de conexión');
                });
            });
        });

        function updateCartCount() {
            // Implementar después cuando tengamos el carrito
            console.log('Actualizar contador del carrito');
        }
    </script>
}