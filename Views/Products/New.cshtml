@model List<Product>
@{
    ViewData["Title"] = "Productos Nuevos";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- Hero section para nuevos productos -->
    <div class="hero-section mb-5" style="background: linear-gradient(135deg, rgba(25, 135, 84, 0.1) 0%, rgba(25, 135, 84, 0.2) 100%);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3 text-success">¡Nuevos Productos!</h1>
                    <p class="lead mb-4">Descubre los últimos lanzamientos en tecnología. Productos innovadores que acaban de llegar a nuestra tienda.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-success btn-lg">
                            <i class="bi bi-box-seam me-2"></i>Ver catálogo completo
                        </a>
                        <a asp-controller="Products" asp-action="Featured" class="btn btn-outline-success btn-lg">
                            <i class="bi bi-star me-2"></i>Ver destacados
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="bi bi-gift-fill display-1 text-success"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Información de nuevos productos -->
    <div class="row mb-5">
        <div class="col-lg-8">
            <h3 class="fw-bold mb-3">Lo último en tecnología</h3>
            <p class="text-muted">
                Mantente a la vanguardia con nuestros productos más recientes. Actualizamos nuestro catálogo constantemente
                para ofrecerte lo mejor en dispositivos electrónicos, gadgets y accesorios tecnológicos.
            </p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <div class="d-inline-block p-3 bg-light rounded">
                <small class="text-muted d-block">
                    <i class="bi bi-info-circle me-1"></i>
                    Productos agregados en los últimos 30 días
                </small>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-box display-1 text-muted mb-3"></i>
            <h3>No hay productos nuevos</h3>
            <p class="text-muted mb-4">Vuelve pronto para ver nuestros nuevos lanzamientos.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Ver todos los productos</a>
        </div>
    }
    else
    {
        <!-- Productos nuevos -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model.OrderByDescending(p => p.CreatedAt))
            {
                <div class="col">
                    <div class="card product-card h-100 border-0 shadow-sm">
                        <div class="position-relative">
                            <!-- Badge nuevo grande -->
                            <span class="badge-new-lg">
                                <i class="bi bi-gift me-1"></i>Nuevo
                            </span>

                            @if (product.IsOnSale)
                            {
                                <span class="badge-discount">
                                    -@(((product.OldPrice - product.Price) / product.OldPrice * 100)?.ToString("0") ?? "20")%
                                </span>
                            }

                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                    <i class="bi bi-calendar-check me-1"></i>
                                    @product.CreatedAt.ToString("dd MMM")
                                </span>
                            </div>

                            <h5 class="card-title fw-bold">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-dark text-decoration-none">
                                    @product.Name
                                </a>
                            </h5>

                            <p class="card-text text-muted small flex-grow-1">
                                @(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price-tag">$@product.Price.ToString("N2")</span>
                                    @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                    {
                                        <span class="text-decoration-line-through text-muted small">$@product.OldPrice?.ToString("N2")</span>
                                    }
                                </div>

                                <div class="d-grid gap-2">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-success">
                                        <i class="bi bi-eye me-2"></i>Ver novedad
                                    </a>
                                    <button class="btn btn-success add-to-cart" data-product-id="@product.Id">
                                        <i class="bi bi-cart-plus me-2"></i>Agregar al carrito
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <div class="d-flex justify-content-between align-items-center small text-muted">
                                <span><i class="bi bi-grid me-1"></i>@product.Category?.Name</span>
                                <span>
                                    @if (product.StockQuantity > 10)
                                    {
                                        <span class="text-success"><i class="bi bi-check-circle me-1"></i>Disponible</span>
                                    }
                                    else if (product.StockQuantity > 0)
                                    {
                                        <span class="text-warning"><i class="bi bi-exclamation-triangle me-1"></i>Últimas unidades</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><i class="bi bi-x-circle me-1"></i>Próximamente</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Newsletter para nuevos productos -->
        <div class="card border-0 bg-light mt-5">
            <div class="card-body p-5 text-center">
                <h3 class="fw-bold mb-3">¿Quieres ser el primero en conocer nuestros nuevos productos?</h3>
                <p class="text-muted mb-4">Suscríbete a nuestro newsletter y recibe notificaciones sobre lanzamientos y ofertas exclusivas.</p>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Tu correo electrónico">
                            <button class="btn btn-success" type="button">Suscribirme</button>
                        </div>
                        <small class="text-muted mt-2 d-block">
                            <i class="bi bi-shield-check me-1"></i>No compartiremos tu información con terceros
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Agregar estos estilos a tu site.css -->
<style>
    .badge-new-lg {
        position: absolute;
        top: 15px;
        left: 15px;
        background: linear-gradient(45deg, #198754, #20c997);
        color: white;
        padding: 8px 15px;
        border-radius: 30px;
        font-size: 1rem;
        font-weight: 700;
        z-index: 10;
        box-shadow: 0 5px 15px rgba(25, 135, 84, 0.3);
    }
</style>

@section Scripts {
    <script>
        // Agregar al carrito
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function() {
                const productId = this.getAttribute('data-product-id');

                // Usaremos fetch temporalmente hasta que creemos el controlador Cart
                fetch('/Cart/AddToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ productId: productId, quantity: 1 })
                })
                .then(response => {
                    if (response.ok) {
                        alert('¡Producto nuevo agregado al carrito!');
                        updateCartCount();
                    } else {
                        alert('Error al agregar el producto');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error de conexión');
                });
            });
        });

        function updateCartCount() {
            // Implementar después cuando tengamos el carrito
            console.log('Actualizar contador del carrito');
        }
    </script>
}