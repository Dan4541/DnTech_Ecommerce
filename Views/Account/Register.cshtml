@using DnTech_Ecommerce.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="row g-0">
                    <!-- Formulario -->
                    <div class="col-lg-7">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h2 class="fw-bold">Crear Cuenta</h2>
                                <p class="text-muted">Únete a nuestra comunidad TechStore</p>
                            </div>

                            <form asp-controller="Account" asp-action="Register" method="post">

                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="FullName" class="form-label">
                                            <i class="fas fa-user me-2"></i>Full Name
                                        </label>
                                        <input asp-for="FullName"
                                                class="form-control"
                                                placeholder="Enter your full name"
                                                autocomplete="name" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                

                                <div class="mb-4">
                                    <label asp-for="Email" class="form-label fw-semibold">Correo Electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-envelope"></i>
                                        </span>
                                        <input asp-for="Email"
                                               type="email"
                                               class="form-control"
                                               id="email"
                                               placeholder="correo@ejemplo.com"
                                               required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="PhoneNumber" class="form-label fw-semibold">Teléfono</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-telephone"></i>
                                        </span>
                                        <input asp-for="PhoneNumber"
                                               type="tel"
                                               class="form-control"
                                               id="phone"
                                               placeholder="+1 (555) 123-4567"
                                               required>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="Password" class="form-label fw-semibold">Contraseña</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-lock"></i>
                                            </span>
                                            <input asp-for="Password"
                                                   type="password"
                                                   class="form-control"
                                                   id="password"
                                                   placeholder="Mínimo 8 caracteres"
                                                   required
                                                   minlength="8">
                                            <button class="input-group-text toggle-password" type="button">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-4">
                                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirmar Contraseña</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-lock-fill"></i>
                                            </span>
                                            <input asp-for="ConfirmPassword"
                                                   type="password"
                                                   class="form-control"
                                                   id="confirmPassword"
                                                   placeholder="Repite tu contraseña"
                                                   required>
                                            <button class="input-group-text toggle-password" type="button">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Address" class="form-label fw-semibold">Dirección</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-geo-alt"></i>
                                        </span>
                                        <input asp-for="Address"
                                               type="text"
                                               class="form-control"
                                               id="address"
                                               placeholder="Calle, número, ciudad"
                                               required>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <label asp-for="City" class="form-label fw-semibold">Ciudad</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-building"></i>
                                            </span>
                                            <input asp-for="City"
                                                   class="form-control"
                                                   id="city"
                                                   placeholder="Ciudad">
                                            <span asp-validation-for="City" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-4">
                                        <label for="postalCode" class="form-label fw-semibold">Código Postal</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-postcard"></i>
                                            </span>
                                            <input asp-for="PostalCode"
                                                   class="form-control"
                                                   id="postalCode"
                                                   placeholder="C.P.">
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Country" class="form-label fw-semibold">País</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-globe"></i>
                                        </span>
                                        <input asp-for="Country"
                                               class="form-control"
                                               id="country"
                                               placeholder="País">
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="mb-4 form-check">
                                    <input type="checkbox" class="form-check-input" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        Acepto los <a href="#" class="text-decoration-none">Términos y Condiciones</a> y la <a href="#" class="text-decoration-none">Política de Privacidad</a>
                                    </label>
                                    <div class="invalid-feedback">
                                        Debes aceptar los términos y condiciones.
                                    </div>
                                </div>

                                <div class="mb-4 form-check">
                                    <input type="checkbox" class="form-check-input" id="newsletter">
                                    <label class="form-check-label" for="newsletter">
                                        Deseo recibir ofertas y novedades por correo
                                    </label>
                                </div>

                                <div class="d-grid mb-4">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-person-plus me-2"></i>Crear Cuenta
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">
                                        ¿Ya tienes una cuenta?
                                        <a href="/Account/Login" class="text-decoration-none fw-semibold text-primary">Inicia Sesión</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Imagen lateral -->
                    <div class="col-lg-5 d-none d-lg-block">
                        <div class="auth-image h-100">
                            <div class="text-center p-5">
                                <i class="bi bi-person-plus display-1 mb-4"></i>
                                <h3 class="fw-bold mb-3">Únete a TechStore</h3>
                                <p class="mb-4">Crea tu cuenta y disfruta de:</p>
                                <ul class="list-unstyled text-start mb-4">
                                    <li class="mb-3">
                                        <i class="bi bi-check-circle me-2"></i>Historial de compras
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-check-circle me-2"></i>Ofertas exclusivas
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-check-circle me-2"></i>Envíos más rápidos
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-check-circle me-2"></i>Lista de deseos
                                    </li>
                                    <li>
                                        <i class="bi bi-check-circle me-2"></i>Seguimiento de pedidos
                                    </li>
                                </ul>
                                <div class="mt-5">
                                    <h5 class="fw-bold">Más de 100,000 clientes satisfechos</h5>
                                    <div class="mt-3">
                                        <i class="bi bi-star-fill text-warning fs-4"></i>
                                        <i class="bi bi-star-fill text-warning fs-4"></i>
                                        <i class="bi bi-star-fill text-warning fs-4"></i>
                                        <i class="bi bi-star-fill text-warning fs-4"></i>
                                        <i class="bi bi-star-half text-warning fs-4"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>