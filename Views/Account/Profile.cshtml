@model DnTech_Ecommerce.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg">
                    <div class="card-header bg-white border-0 pt-4">
                        <div class="text-center">
                            <div class="feature-icon mx-auto mb-3">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <h2 class="fw-bold">Mi Perfil</h2>
                            <p class="text-muted">Actualiza tu información personal</p>
                        </div>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-4" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="card-body p-5">
                        <form asp-controller="Account" asp-action="Profile" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <input asp-for="FullName" class="form-control" placeholder="Nombre completo">
                                    </div>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="Email" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-envelope"></i>
                                        </span>
                                        <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-telephone"></i>
                                    </span>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="+52 123 456 7890">
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Address" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-geo-alt"></i>
                                    </span>
                                    <input asp-for="Address" class="form-control" placeholder="Calle, número, colonia">
                                </div>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-4">
                                    <label asp-for="City" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-building"></i>
                                        </span>
                                        <input asp-for="City" class="form-control" placeholder="Ciudad">
                                    </div>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <label asp-for="PostalCode" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-postcard"></i>
                                        </span>
                                        <input asp-for="PostalCode" class="form-control" placeholder="C.P.">
                                    </div>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <label asp-for="Country" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-globe"></i>
                                        </span>
                                        <input asp-for="Country" class="form-control" placeholder="País">
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <h5 class="fw-bold mb-4">Cambiar Contraseña</h5>
                            <p class="text-muted mb-4">Deja estos campos en blanco si no deseas cambiar la contraseña.</p>

                            <div class="row">
                                <div class="col-md-4 mb-4">
                                    <label asp-for="OldPassword" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <input asp-for="OldPassword" class="form-control" placeholder="Contraseña actual">
                                        <button class="input-group-text toggle-password" type="button">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="OldPassword" class="text-danger small"></span>                                    
                                </div>

                                <div class="col-md-4 mb-4">
                                    <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <input asp-for="NewPassword" class="form-control" placeholder="Nueva contraseña">
                                        <button class="input-group-text toggle-password" type="button">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <label asp-for="ConfirmNewPassword" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock-fill"></i>
                                        </span>
                                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirmar nueva contraseña">
                                        <button class="input-group-text toggle-password" type="button">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle password visibility
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function() {
                const input = this.previousElementSibling;
                const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                input.setAttribute('type', type);
                this.classList.toggle('bi-eye');
                this.classList.toggle('bi-eye-slash');
            });
        });
    </script>
}