@{
    ViewData["Title"] = "Inicio - TechStore";
    Layout = "_Layout";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Tecnología al Alcance de Todos</h1>
                <p class="lead mb-4">Descubre los últimos dispositivos electrónicos, gadgets y accesorios al mejor precio del mercado.</p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="#" class="btn btn-primary btn-lg">
                        <i class="bi bi-cart3 me-2"></i>Comprar Ahora
                    </a>
                    <a href="#" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-tag me-2"></i>Ver Ofertas
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1556656793-08538906a9f8?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                     alt="Productos de tecnología"
                     class="img-fluid rounded-3 shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- Featured Categories -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Categorías Destacadas</h2>
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="card category-card">
                    <div class="card-body">
                        <!-- ICONO CIRCULAR AQUÍ -->
                        <div class="feature-icon">
                            <i class="bi bi-phone"></i>
                        </div>
                        <h5 class="card-title fw-bold">Smartphones</h5>
                        <p class="card-text">Los últimos modelos de todas las marcas</p>
                        <a href="#" class="btn btn-outline-primary">Ver más</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card category-card">
                    <div class="card-body">
                        <div class="feature-icon">
                            <i class="bi bi-laptop"></i>
                        </div>
                        <h5 class="card-title fw-bold">Laptops</h5>
                        <p class="card-text">Para trabajo, estudio y gaming</p>
                        <a href="#" class="btn btn-outline-primary">Ver más</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card category-card">
                    <div class="card-body">
                        <div class="feature-icon">
                            <i class="bi bi-headphones"></i>
                        </div>
                        <h5 class="card-title fw-bold">Audio</h5>
                        <p class="card-text">Auriculares y altavoces de calidad</p>
                        <a href="#" class="btn btn-outline-primary">Ver más</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card category-card">
                    <div class="card-body">
                        <div class="feature-icon">
                            <i class="bi bi-smartwatch"></i>
                        </div>
                        <h5 class="card-title fw-bold">Wearables</h5>
                        <p class="card-text">Smartwatches y dispositivos portátiles</p>
                        <a href="#" class="btn btn-outline-primary">Ver más</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="fw-bold">Productos Destacados</h2>
            <a href="#" class="btn btn-primary">Ver Todos</a>
        </div>

        <div class="row g-4">
            <!-- Producto 1 -->
            <div class="col-lg-3 col-md-6">
                <div class="card product-card">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                             class="card-img-top"
                             alt="iPhone 14 Pro">
                        <span class="badge-discount">-20%</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">iPhone 14 Pro</h5>
                        <p class="card-text text-muted">256GB, Pantalla Dynamic Island</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="price-tag">$999</span>
                            <span class="text-decoration-line-through text-muted">$1,199</span>
                        </div>
                        <button class="btn btn-primary w-100 mt-auto">
                            <i class="bi bi-cart-plus me-2"></i>Agregar al Carrito
                        </button>
                    </div>
                </div>
            </div>

            <!-- Producto 2 -->
            <div class="col-lg-3 col-md-6">
                <div class="card product-card">
                    <img src="https://images.unsplash.com/photo-1496181133206-80ce9b88a853?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                         class="card-img-top"
                         alt="MacBook Pro">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">MacBook Pro M2</h5>
                        <p class="card-text text-muted">16GB RAM, 512GB SSD</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="price-tag">$1,299</span>
                        </div>
                        <button class="btn btn-primary w-100 mt-auto">
                            <i class="bi bi-cart-plus me-2"></i>Agregar al Carrito
                        </button>
                    </div>
                </div>
            </div>

            <!-- Producto 3 -->
            <div class="col-lg-3 col-md-6">
                <div class="card product-card">
                    <img src="https://images.unsplash.com/photo-1484704849700-f032a568e944?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                         class="card-img-top"
                         alt="Auriculares Sony">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Sony WH-1000XM4</h5>
                        <p class="card-text text-muted">Cancelación de ruido</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="price-tag">$349</span>
                        </div>
                        <button class="btn btn-primary w-100 mt-auto">
                            <i class="bi bi-cart-plus me-2"></i>Agregar al Carrito
                        </button>
                    </div>
                </div>
            </div>

            <!-- Producto 4 -->
            <div class="col-lg-3 col-md-6">
                <div class="card product-card">
                    <div class="position-relative">
                        <img src="https://images.unsplash.com/photo-1546868871-7041f2a55e12?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                             class="card-img-top"
                             alt="Apple Watch">
                        <span class="badge-new">Nuevo</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Apple Watch Series 8</h5>
                        <p class="card-text text-muted">GPS + Cellular</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="price-tag">$429</span>
                        </div>
                        <button class="btn btn-primary w-100 mt-auto">
                            <i class="bi bi-cart-plus me-2"></i>Agregar al Carrito
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-item">
                    <i class="bi bi-truck"></i>
                    <h5 class="fw-bold">Envío Gratis</h5>
                    <p class="text-muted mb-0">En pedidos superiores a $50</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <i class="bi bi-arrow-counterclockwise"></i>
                    <h5 class="fw-bold">Devoluciones Fáciles</h5>
                    <p class="text-muted mb-0">30 días para devoluciones</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <i class="bi bi-shield-check"></i>
                    <h5 class="fw-bold">Compra Segura</h5>
                    <p class="text-muted mb-0">Protegemos tus datos</p>
                </div>
            </div>
        </div>
    </div>
</section>